@using OnlineStore.Models

@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Admin_Header.cshtml";
    Session["Page"] = "AddProduct";
}

<script src="~/Content/Script/charisma.js"></script>

<div id="content" class="col-lg-10 col-sm-10">
    <!-- content starts COPPPPPPPPYYYYYYYYYYYYYY -->
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="/Admin/Dashboard">Home</a>
            </li>
            <li>
                <a href="/Admin/AddProduct">Add Product</a>
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="box col-md-12">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2><i class="glyphicon glyphicon-edit"></i> Add Product</h2>

                </div>
                <div class="box-content">
                    <form action="/Admin/Additem" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" name="name" placeholder="Title">
                        </div>

                        <div class="form-group">
                            <label>Price</label>
                            <input type="number" class="form-control" name="price" placeholder="Price">
                        </div>

                        <div class="form-group">
                            <label>Stock</label>
                            <input type="number" class="form-control" name="stock" placeholder="Stock">
                        </div>

                        <hr />
                        <label>Brand</label>
                        <select name="brand" class="ui-tabs-selected" style="margin-left:8%;">

                            @foreach (var s in ViewBag.brandsList)
                            {

                                <option value=@s.bName>@s.bName</option>

                            }
                        </select>

                        <br /><br />
                        <hr />





                        <label>Category</label>
                        <select id="CategorySelector" name="category" class="ui-tabs-selected" style="margin-left:6%;">

                            <option value="n">-select-</option>

                            @foreach (var s in ViewBag.categoriesList)
                            {

                                <option value=@s.c_name>@s.c_name</option>

                            }
                        </select>

                        <br /><br />
                        <hr />
                        <label>Sub Category</label>

                        <div id="d1" style="margin-left:9%;"></div>


                        @*<select id="subCategorySelector" name="subName" style="margin-left:3%;">

                                @foreach (var s in Model)
                                {

                                    <option value=@s.subName>@s.subName</option>

                                }
                            </select>*@
                        <hr />


                        <div class="form-group">
                            <br />
                            <label for="exampleInputFile">Add Image</label>
                            <input type="file" multiple name="image">
                        </div>
                        <hr />
                        <button type="submit" class="btn btn-primary">Add Product</button>
                    </form>
                </div>
            </div>
        </div>
        <!--/span-->
    </div><!--/row-->
    <!-- content ends -->
</div><!--/#content.col-md-0-->


<script>

    $('#CategorySelector').change(function () {
        var value = $('#CategorySelector').val();

        $('#d1').load('/Admin/category?cat=' + value);
    });

</script>
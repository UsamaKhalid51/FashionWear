@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Admin_Header.cshtml";
    Session["Page"] = "AdminProducts";
}

@using OnlineStore.Models

<body>
    <div class="ch-container">
        <div class="row">

            <div id="content" class="col-lg-10 col-sm-10">
                <!-- content starts -->
                <div>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/Admin/Dashboard">Home</a>
                        </li>
                        <li>
                            <a href="/Admin/Products">Products</a>
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <div class="box col-md-12">
                        <div class="box-inner">
                            <div class="box-header well" data-original-title="">
                                <h2><i class="glyphicon glyphicon-user"></i>Products</h2>

                            </div>
                            <div class="box-content">
                                <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                                    <thead>
                                        <tr>
                                            <th>Produt Name</th>
                                            <th>Brand</th>
                                            <th>Category</th>
                                            <th>Sub Category</th>
                                            <th>Price</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach(item i in Model)
                                        { 
                                        <tr>
                                            <td>@i.name</td>
                                            <td class="center">@i.brand</td>
                                            <td class="center">@i.category</td>
                                            <td class="center">@i.subName </td>
                                            <td class="center">@i.price</td>
                                            <td class="center">
                                                
                                                <i class="glyphicon glyphicon-edit icon-white btn btn-info">
                                                    @Html.ActionLink("Update", "UpdateItem", i, new { @style = "color:white;font-size:15px; font-weight:bold;" })
                                                </i>

                                                <i class="glyphicon glyphicon-trash icon-white btn btn-danger">
                                                    @Html.ActionLink("Delete", "DeleteItem", i, new { @style = "color:white;font-size:15px; font-weight:bold;" })
                                                </i>

                                            </td>
                                        </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div><!--/row-->
                <!-- content ends -->
            </div><!--/#content.col-md-0-->
        </div><!--/fluid-row-->

    </div><!--/.fluid-container-->
</body>
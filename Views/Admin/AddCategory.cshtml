@using OnlineStore.Models

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_Admin_Header.cshtml";
    Session["Page"] = "AddCategory";
}


@if (ViewBag.info != null)
{
    <script>alert('Category Already Exists!');</script>
}


<div id="content" class="col-lg-10 col-sm-10">
    <!-- content starts -->
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="/Admin/Dashboard">Home</a>
            </li>
            <li>
                <a href="/Admin/AddCategory">Add Category</a>
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="box col-md-12">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2><i class="glyphicon glyphicon-edit"></i> Add Category</h2>

                </div>
                <div class="box-content">
                    <form action="/Admin/AddCategoryItem" method="post" enctype="multipart/form-data">

                        <hr />
                        <label>Current Categories</label>
                        <select name="brand" class="ui-tabs-selected" style="margin-left:8%;">

                            @foreach (var s in ViewBag.categoryList)
                            {

                                <option value=@s.c_name>@s.c_name</option>

                            }
                        </select>


                        <hr />
                        <div class="form-group">
                            <label>Category Name</label>
                            <input type="text" class="form-control" required maxlength="45" name="c_name" placeholder="Category Name">
                        </div>




                        <br /><br />
                        <hr />


                        <button type="submit" class="btn btn-primary">Add Category</button>
                    </form>
                </div>
            </div>
        </div>
        <!--/span-->
    </div><!--/row-->
    <!-- content ends -->
</div><!--/#content.col-md-0-->
@using OnlineStore.Models

@{
    
    ViewBag.Title = "orderDetails";

    if (ViewBag.val == null)
    {
        Layout = "~/Views/Shared/_Admin_Header.cshtml";
    }
    else
    {

        Layout = "~/Views/Shared/_Layout.cshtml";
    }
   
    Session["Page"] = "orderDetails";

}

<body>
    <div class="ch-container">
        <div class="row">

            <div id="content" class="col-lg-10 col-sm-10">
                <!-- content starts -->
                <div>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/Admin/Dashboard">Home</a>
                        </li>
                        <li>
                            <a href="/Admin/getAllOrders">Order Details</a>
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <div class="box col-md-12">
                        <div class="box-inner">
                            <div class="box-header well" data-original-title="">
                                <h2><i class="glyphicon glyphicon-user"></i>orderDetails</h2>

                            </div>

                            <div class="box-content">
                                <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                                    <thead>
                                        <tr>
                                            <th>Order Id</th>
                                            <th>Item Name</th>
                                            <th>Sub Total</th>
                                            <th>Quantity</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>



                                        @foreach (orderDetail u in Model)
                                        {

                                            <tr>
                                                <td>@u.o_id</td>
                                                <td>@u.item.name</td>
                                                <td>@u.subtotal</td>
                                                <td>@u.quantity</td>
                                               
                                            </tr>

                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div><!--/row-->
                <!-- content ends -->
            </div><!--/#content.col-md-0-->
        </div><!--/fluid-row-->
    </div><!--/.fluid-container-->







</body>

@{
    Layout = null;
    ViewBag.Title = "Products";
}

@using OnlineStore.Models
@{ user u = (user)HttpContext.Current.Session["user"];}






    <div class="col-lg-12">
        <h1 style="color:#1b1b1b; font-size:30px;margin-left:9%;font-family:Bebas Neue; font-weight:bolder; ">Items Found</h1><br /> 
        <button type="submit" id="back" onclick="lat();" class="btn btn-success">Back</button>
        <br /> 
        <hr />
    </div>

    @{
        List<item> list = new List<item>();
        list = ViewBag.LatestItemsList;
    }

    @foreach (item i in Model)
    {
        <div class="col-lg-3 col-md-4 col-xs-6" style="height:310px; ">

            
            <a href="~/Files/@i.image_name" class=" thumbnail" style="color:#1b1b1b;border:1px solid black;background-color:#f5e7e7" rel="lightbox">
                <img src="~/Files/@i.image_name" alt="" style="height:150px;width:150px;">


                ID: @i.item_Id <br />
                Name: @i.name
                <br />
                Brand: @i.brand <br />
                Category: @i.category <br />
                Price:  @i.price
            </a>

            @if (u != null)
            {
                 
                <div class="glyphicon glyphicon-shopping-cart thumbnail" style="margin-top:-17px;">
                    @Html.ActionLink("AddToCart", "AddToCart", i)
                </div>              
             }
            </div>       
    }


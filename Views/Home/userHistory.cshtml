@using OnlineStore.Models

@{
    ViewBag.Title = "userHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Session["Page"] = "getAllOrders";

}

<body>

     
        <div class="ch-container" style="margin-top:7%;margin-left:20%;">
            <div class="row">

                <div id="content" class="col-lg-10 col-sm-10">
                    <!-- content starts -->
                    <div>
                        <ul class="breadcrumb">
                            <li>
                                <a href="/Admin/Dashboard">Home</a>
                            </li>
                            <li>
                                <a href="/Admin/getAllOrders">Orders</a>
                            </li>
                        </ul>
                    </div>
                    <div class="row">
                        <div class="box col-md-12">
                            <div class="box-inner">
                                <div class="box-header well" data-original-title="">
                                    <h2><i class="glyphicon glyphicon-user"></i>Users</h2>

                                </div>

                                <div class="box-content">
                                    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                                        <thead>
                                            <tr>
                                                <th>Order Id</th>
                                                <th>User Name</th>
                                                <th>Total Amount</th>
                                                <th>Date/Time</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>



                                            @foreach (order u in Model)
                                        {
                                            int hid = (int)u.total_amount;
                                                u.total_amount  =-1;
                                                
                                            if (ViewBag.currentUser.name.Equals(u.user.name))
                                            {
                                               
                                                       
                                                <tr>
                                                    <td>@u.order_Id</td>
                                                    <td>@u.user.name</td>
                                                    <td>@hid</td>
                                                    <td>@u.date</td>                                                   

                                                

                                                    <td class="center">
                                                                                                  
                                                        <i class="glyphicon glyphicon-trash icon-white btn btn-info">
                                                            @Html.ActionLink("Detail", "orderDetail", "Admin" , u, new { @style = "color:white;font-size:15px; font-weight:bold;" })
                                                        </i>
                                                    </td>
                                                </tr>
                                        }
                                        }


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div><!--/row-->
                    <!-- content ends -->
                </div><!--/#content.col-md-0-->
            </div><!--/fluid-row-->
        </div><!--/.fluid-container-->




</body>
